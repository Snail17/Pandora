<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pandora.model.main.activity.MainActivity">


    <FrameLayout
        android:id="@+id/main_container_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.pandora.model.main.widget.BottomBarLayout
        android:id="@+id/main_bottom_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:text_color="#000"
        android:background="#ebebeb"
        app:text_select_color="#00AAEE"
        />


</LinearLayout>
