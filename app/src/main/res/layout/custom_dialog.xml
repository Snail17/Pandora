<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dimen_15"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/default_sp_20" />

    <TextView
        android:id="@+id/tv_content_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dimen_15"
        android:gravity="center"
        android:text="content"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/default_sp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_sp_30"
        android:layout_marginRight="@dimen/default_sp_30"
        android:layout_marginTop="@dimen/default_dimen_15"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/gray_e6"
            android:text="取消"
            android:layout_marginRight="@dimen/default_dimen_30"
            android:textSize="@dimen/default_sp_18" />

        <Button
            android:id="@+id/btn_confirm_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@color/red_cc"
            android:layout_marginLeft="@dimen/default_sp_30"
            android:text="确定"
            android:textSize="@dimen/default_sp_18" />
    </LinearLayout>

</LinearLayout>