<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dimen_15"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/default_sp_20" />

    <TextView
        android:id="@+id/tv_content_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_dimen_15"
        android:gravity="center"
        android:padding="@dimen/default_dimen_10"
        android:text="content"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/default_sp_18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/default_dimen_15"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_dimen_10">

        <TextView
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:padding="@dimen/default_dimen_10"
            android:textColor="@color/blue_00"
            android:textSize="@dimen/default_sp_14" />

        <TextView
            android:id="@+id/btn_confirm_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/default_sp_20"
            android:layout_marginRight="@dimen/default_dimen_30"
            android:text="确定"
            android:padding="@dimen/default_dimen_10"
            android:textColor="@color/blue_00"
            android:textSize="@dimen/default_sp_14" />
    </LinearLayout>

</LinearLayout>