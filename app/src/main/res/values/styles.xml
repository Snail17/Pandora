<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--here<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>


    <!-- my loading  -->
    <style name="MyLoadingStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FragmentMyItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_dimen_50</item>
        <item name="android:gravity">center|left</item>
        <item name="android:drawablePadding">@dimen/default_dimen_10</item>
        <item name="android:paddingRight">@dimen/default_dimen_10</item>
        <item name="android:paddingLeft">@dimen/default_dimen_10</item>
        <item name="android:textColor">@color/black_32</item>
        <item name="android:textSize">@dimen/default_sp_16</item>
        <item name="android:layout_marginTop">@dimen/default_dimen_5</item>
        <item name="android:layout_marginBottom">@dimen/default_dimen_5</item>
        <item name="android:background">@color/white_ff</item>
    </style>
</resources>
