<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/blue_00</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue_00</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- my loading  -->
    <style name="MyLoadingStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--我的 每个item的样式-->
    <style name="FragmentMyItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_dimen_50</item>
        <item name="android:gravity">center|left</item>
        <item name="android:drawablePadding">@dimen/default_dimen_10</item>
        <item name="android:paddingRight">@dimen/default_dimen_10</item>
        <item name="android:paddingLeft">@dimen/default_dimen_10</item>
        <item name="android:textColor">@color/black_32</item>
        <item name="android:textSize">@dimen/default_sp_16</item>
        <item name="android:layout_marginTop">@dimen/default_dimen_5</item>
        <item name="android:layout_marginBottom">@dimen/default_dimen_5</item>
        <item name="android:background">@color/white_ff</item>
    </style>
    <!--跑马灯样式-->
    <style name="TextViewMarquee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:background">@color/transparent_gray_80</item>
    </style>

    <!--横线-->
    <style name="horizontal_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_e6</item>
    </style>


    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/bg_dialog_confirm</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MovieItemTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white_ff</item>
        <item name="android:textSize">@dimen/default_sp_14</item>
        <item name="android:padding">@dimen/default_dimen_10</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:drawablePadding">@dimen/default_dimen_20</item>
    </style>
</resources>
